generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id          String    @id @default(uuid())
  displayName String
  legalName   String
  category    String
  profiles    Profile[]
}

model Profile {
  id        String      @id @default(uuid())
  email     String
  phone     String
  residency String
  user      User        @relation(fields: [userId], references: [id])
  userId    String      @unique
  companies Company[]
  expertise Expertise[]
}

model Expertise {
  id          String    @id @default(uuid())
  displayName String    @unique
  profiles    Profile[]
}

model User {
  id           String   @id @default(uuid())
  displayName  String
  userName     String   @unique
  email        String   @unique
  code         String
  password     String
  active       Boolean
  refreshToken String?
  profile      Profile?
  roles        Role[]
  participant  Event[]
}

model Role {
  id          String       @id @default(uuid())
  code        String       @unique
  users       User[]
  permissions Permission[]
}

model Permission {
  id    String @id @default(uuid())
  code  String
  roles Role[]
}

model Event {
  id           String    @id @default(uuid())
  slug         String    @unique
  displayName  String
  description  String
  type         String
  startDate    DateTime
  endDate      DateTime?
  participants User[]
}
